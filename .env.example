# Which user is "logged in" (used for access control)
DEMO_USER_EMAIL=alex.kim@acme.com

# LLM provider: openai_compatible
LLM_PROVIDER=openai_compatible

# OpenAI-compatible configuration (works for Databricks Model Serving too)
LLM_API_KEY=sk-your-openai-key
LLM_BASE_URL=                    # Leave empty for OpenAI, or set for Databricks/other
LLM_MODEL=gpt-4o-mini

# Local DB
DB_URL=sqlite:///./hr_demo.db

# Langfuse tracing (optional - free tier at https://cloud.langfuse.com)
LANGFUSE_ENABLED=false
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# API server
API_HOST=0.0.0.0
API_PORT=8000
